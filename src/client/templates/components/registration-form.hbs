<form id="registration-form" role="form" {{action "register" on="submit"}}>
    <div class="form-group has-feedback">
        <label for={{emailField.elementId}} class="control-label">Email</label>
        {{input viewName="emailField" name="email" class="form-control" viewName="emailField" value=email}}
        <span class="glyphicon glyphicon-remove form-control-feedback hidden" data-toggle="tooltip" data-placement="top"></span>
    </div>

    <div class="form-group has-feedback">
        <label for={{passwordField.elementId}} class="control-label">Password</label>
        {{input viewName="passwordField" name="password" type="password" class="form-control" value=password}}
        <span class="glyphicon glyphicon-remove form-control-feedback hidden" data-toggle="tooltip" data-placement="top"></span>
    </div>

    <div class="form-group has-feedback">
        <label for={{confirmPasswordField.elementId}} class="control-label">Confirm Password</label>
        {{input viewName="confirmPasswordField" name="confirmPassword" type="password" class="form-control"}}
        <span class="glyphicon glyphicon-remove form-control-feedback hidden" data-toggle="tooltip" data-placement="top"></span>
    </div>

    <input type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px;" />

    {{#if registrationFailed}}
        <div class="alert alert-danger">{{errorMessage}}</div>
    {{/if}}

    {{#if isDuplicatedEmail}}
        <div class="alert alert-danger">User with such email already exist. Try to
            {{#link-to "forgot-password"}}reset your password{{/link-to}}.</div>
    {{/if}}
</form>
