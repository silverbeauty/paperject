{{route-dialog-header title="Paperjet Sign-Up"}}

<div class="container route-dialog-body" id="register">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <div class="row">
                <div class="col-xs-12">
                    {{registration-form action="registerFormAction" inviteId=inviteId}}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <button {{action 'register'}} type="submit" class="btn btn-primary ladda-button btn-lg btn-block" disabled={{isProcessing}} id="register-btn" data-style="expand-left" data-spinner-color="#f2f2f2" data-spinner-size="25">
                        <span class="ladda-label">Sign up with email</span>
                    </button>
                </div>
                <div class="col-sm-6 col-xs-12">
                    <span class="pull-right-sm" style="line-height: 45px;">{{#link-to "forgot-password"}}Forgot password?{{/link-to}}</span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-xs-12" style="margin-top:10px">
                    <a href="/auth/google.login?inviteId={{unbound inviteId}}" class="btn btn-block btn-default"><i class="fa fa-google-plus"></i> Sign up with Google</a>
                </div>
                <div class="col-sm-6 col-xs-12" style="margin-top:10px">
                    <a href="/auth/facebook.login?inviteId={{unbound inviteId}}" class="btn btn-block btn-default"><i class="fa fa-facebook"></i> Sign up with Facebook</a>
                </div>
            </div>
        </div>
    </div>
</div>

{{app-footer}}
