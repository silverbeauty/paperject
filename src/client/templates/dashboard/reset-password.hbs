{{route-dialog-header title="Reset Password"}}

<div class="container route-dialog-body">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-3 col-md-6 col-md-offset-3">
            <form id="reset-password-form" role="form">
                <div class="form-group has-feedback">
                    <label for= {{passwordField.elementId}}>New Password</label>
                    {{input id="password" value=view.password name="password" viewName="passwordField" type="password" class="form-control"}}
                    <span class="glyphicon glyphicon-remove form-control-feedback hidden" data-toggle="tooltip" data-placement="top"></span>
                </div>

                <div class="form-group has-feedback">
                    <label for= {{confirmPasswordField.elementId}}>Confirm Password</label>
                    {{input name="confirmPassword" viewName="confirmPasswordField" type="password" class="form-control"}}
                    <span class="glyphicon glyphicon-remove form-control-feedback hidden" data-toggle="tooltip" data-placement="top"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary ladda-button" disabled= {{isProcessing}} id="reset-pwd-btn" data-style="expand-left" data-spinner-color="#f2f2f2" data-spinner-size="25">
                        <span class="ladda-label">Set Password</span>
                        <span class="ladda-spinner" data-size="xs"></span>
                        <div class="ladda-progress" style="width: 0px;"></div>
                    </button>
                </div>


                {{#if actionFailed}}
                    <div class="alert alert-danger">{{errorMessage}}</div>
                {{/if}}
            </form>
        </div>
    </div>
</div>

{{app-footer}}
