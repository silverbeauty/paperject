block variables
    -title='Support - Paperjet. Go Paperless'
extends ../layout
block head

block content
    section.top-header-panel.no-bg
        navbar.navbar-default.white.affix(data-offset-top='300', role='navigation')
            include ../nav
    section.general-page.app-container
        .light-bg
            .title-box
                h2 Get in touch!
                p.title-description
                    | Use the form below to drop us a line. We would love to hear from you about anything regarding support, sales, partnering, affiliates or investment. Or mail us directly at <a href="mailto:support@paperjet.com">support@paperjet.com</a>

            <div class="container" style="margin-top:40px">
            <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <form id="support-dialog-form">
            <div class="form-group">
            <label>Your Email</label>
            <input name="email" id="support-dialog-email-field" class="form-control" type="text" placeholder="name@gmail.com"/>
            </div>

            <div class="form-group">
            <label>Subject</label>
            <input name="subject" id="support-dialog-subject-field" class="form-control" type="text" placeholder="What is your question about?"/>
            </div>

            <div class="form-group">
            <label>Message</label>
            <textarea name="message" id="support-dialog-message-field" class="form-control" rows="10" placeholder="Write your message here"></textarea>
            </div>

            <div class="form-group clearfix row">
            <div class="col-xs-12" style="text-align:center">
            <button type="submit" class="btn btn-lg btn-primary btn-brand-green" id="support-dialog-send-btn" style="min-width:200px">Send</button>
            </div>
            </div>
            </form>
            <div id="support-dialog-info-container" class="support-dialog-result-container"></div>
            <div id="support-dialog-error-container" class="support-dialog-result-container"></div>
            </div>
            </div>
            </div>
